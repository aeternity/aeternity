;; contract SpendTest

FUNCTION init() -> {tuple, []}
  RETURNR ()

FUNCTION spend(address, integer) -> integer
  BALANCE a
  SPEND arg1 arg0
  SUB a a arg1
  RETURN

FUNCTION withdraw(integer) -> integer
  PUSH arg0
  CALLER a
  CALL_T spend

FUNCTION withdraw_from(address, integer) -> integer
  PUSH arg1
  CALL_R arg0 withdraw
  PUSH arg1
  CALL_T withdraw

FUNCTION spend_from(address, address, integer) -> integer
  PUSH arg2
  CALL_R arg0 withdraw
  SPEND arg2 arg1
  BALANCE_OTHER a arg1
  RETURN

FUNCTION get_balance() -> integer
  BALANCE a
  RETURN

FUNCTION get_balance_of(address) -> integer
  BALANCE_OTHER a arg0
  RETURN
