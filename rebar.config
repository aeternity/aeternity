{erl_opts, [debug_info, {parse_transform, lager_transform}]}.
{deps, [{lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.5.1"}}},
        {gb_merkle_trees, {git, "https://github.com/lucafavatella/gb_merkle_trees.git", {ref, "4d84f40"}}} %% Tag `v0.2.0` plus `.app` generated by `make ebin/gb_merkle_trees.app`.
       ]}.

{relx, [{release, { epoch, "0.1.0" },
         [aecore]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{local, [{relx, [{dev_mode, true},
                             {include_erts, false},
                             {include_src, true}]}]
            },
            {test, [{relx, [{dev_mode, true},
                            {include_erts, false},
                            {include_src, true}]},
                    {deps, [{meck, ".*", {git, "git://github.com/eproxus/meck.git", {tag, "0.8.6"}}}
                           ]}
                   ]},
            {prod, [{relx, [{dev_mode, false},
                            {include_erts, true},
                            {include_src, false}]}]
            }]
}.
