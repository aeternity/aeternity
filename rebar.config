	{plt_apps, all_deps},
	{base_plt_apps, [erts, kernel, stdlib, crypto, mnesia, trace_runner, rocksdb, mnesia_rocksdb, aesophia_aci_encoder]}
]}.

{edoc_opts, [{preprocess, true}]}.
