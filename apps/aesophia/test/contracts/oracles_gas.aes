contract OraclesGas =

  type fee = int
  type question_t = string
  type answer_t = int

  public function happyPathWithAllBuiltinsAtSameHeight(
    qfee : fee,
    ottl : Chain.ttl,
    ettl : Chain.ttl,
    qttl : Chain.ttl,
    rttl : Chain.ttl,
    sign : signature
    ) =
    let question = "why"
    let answer = 42
    let o = Oracle.register(Contract.address, sign, qfee, ottl) : oracle(question_t, answer_t)
    Oracle.extend(o, sign, ettl)
    require(qfee =< Call.value, "insufficient value for qfee")
    let q = Oracle.query(o, question, qfee, qttl, rttl)
    Oracle.respond(o, q, sign, answer)
    ()

  private function require(b : bool, err : string) =
    if(!b) abort(err)

  private function abort(err : string) =
    switch(0) 1 => ()
