
contract RemoteCall =

    function call(r : address, x : int) : int =
        let gas   = 10000
        let value = 10
        raw_call(r, "main", gas, value, x)

    function call42(r : address) : int = call(r, 42)

    function staged_call(r1 : address, r2 : address, x : int) =
        raw_call(r1, "call", 20000, 0, (r2, x))

    function call_multi_args_with_variable(r1 : address, r2 : address, x : int) =
        let args = (r2, x)
        raw_call(r1, "call", 20000, 0, args)

    function call_multi_args_with_private_function(r1 : address, r2 : address, x : int) =
        call_raw_call(r1, "call", 20000, 0, (r2, x))

    private function call_raw_call(r : address, f : string, gas : int, value : int, args) =
        raw_call(r, f, gas, value, args)

    function plus(x, y) = x + y

